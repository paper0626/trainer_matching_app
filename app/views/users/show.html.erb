<div class="main user-show">
  <div class="container">
    <div class="user-information">
      <img src=<%= "/user_images/#{@user.image}" %>>
      <h2><%= @user.name %></h2>
      <p><%= @user.email %></p>
      <% if @user.id == @current_user.id %>
        <%= link_to('編集', "/users/#{@user.id}/edit") %>
        <%= link_to('削除', "/users/#{@user.id}/destroy", method: :post, data: {confirm: '本当に削除してよろしいですか？'}) %>
      <% end %>
    </div>
    <% if @user.id == @current_user.id %>
      <div class="trainer-register">
        <%= link_to('トレーナーとして登録する',"/trainers/signup") %>
      </div>
    <% end %>
  </div>
</div>