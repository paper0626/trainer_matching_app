<!DOCTYPE html>
<html>
  <head>
    <title>TrainerMatchingApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!--ヘッダー-->
    <header>
      <div class="header-logo">
        <%= link_to('TrainerMatchingApp', '/') %>
      </div>
      <% if @current_user %> 
      <ul class="header-menus">
        <li><%= link_to('ユーザー一覧', '/users/index') %></li>
        <li><%= link_to('トレーナーを探す', '/trainers/index') %></li>
        <li><%= link_to('ログアウト', "/users/#{@current_user.id}/logout", method: :post) %></li>
        <li><%= link_to('マイページ', "/users/#{@current_user.id}") %></li>
      </ul>
      <% else %>
      <ul class="header-menus">
        <li><%= link_to('ユーザー一覧', '/users/index') %></li>
        <li><%= link_to('トレーナーを探す', '/trainers/index') %></li>
        <li><%= link_to('ログイン', '/users/login') %></li>
        <li><%= link_to('会員登録', '/users/signup') %></li>
      </ul>
      <% end %>
    </header>
    <!--ヘッダーここまで-->
    
    <!--サクセス・エラーメッセージ-->
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
