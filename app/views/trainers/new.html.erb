<div class="main trainer-new">
  <div class="container">
    <div class="trainer-form">
      <!--エラーメッセージ表示-->
      <div class="error-messages">
        <% if @trainer.errors.any? %>
          <% @trainer.errors.full_messages.each do |message| %>
            <p><%= message %></p>
          <% end %>
        <% end %>
      </div>
      
      <!--トレーナー登録フォーム-->
      <%= form_with(url: '/trainers/create', local: true) do |form| %>
        <p>名前</p>
        <input type="text" name="name" value="<%= @trainer.name %>">
        <p>メールアドレス</p>
        <input type="email" name="email" value="<%= @trainer.email %>">
        <p>パスワード</p>
        <input type="password" name="password" value="<%= @trainer.password %>">
        <div class="submit">
          <input type="submit" value="登録する">
        </div>
      <% end %>
    </div>
  </div>
</div>